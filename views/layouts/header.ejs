    <!-- 登录模态框（LoginModal） -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" 
       aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                          <i class="icon iconfont icon-x"></i>
                    </button>
                    <h4 class="modal-title text-center" id="loginModalLabel">
                       <i class="iconfont icon-logo logo-modal"></i>
                    </h4>
                </div>
                <div class="modal-body">
                    <form type="submit" autocomplete="off">
                        <div class="form-group">
                            <label class="control-label">用户名</label>
                            <input class="form-control username-login-input" type="text" name="username" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label class="control-label">密码</label>
                            <input class="form-control password-login-input" type="password" name="password" autocomplete="off">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div class="forget-pw">
                        <a href="http://site.wedfairy.com/forget-password">忘记密码？</a>
                    </div>
                    <button class="btn btn-primary login-btn">
                       <h4>登录</h4>
                    </button>
                    <div class="login-footer-others">
                        <div class="wechat pull-left"><a href="https://open.weixin.qq.com/connect/qrconnect?appid=wxe2e28297d62b0270&redirect_uri=http://api.wedfairy.com/api/users/wechat-auth/&response_type=code&scope=snsapi_login&state=web%7C#wechat_redirect">微信快捷登录</a></div>
                        <!-- <div class="register pull-right">还没有账号?<a href=""><span>免费注册</span></a></div> -->
                        <div class="register-link pull-right">还没有账号?<button class="switch-to-register"><span>免费注册</span></button></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 注册模态框 -->
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" 
       aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" 
                       data-dismiss="modal" aria-hidden="true">
                          <i class="icon iconfont icon-x"></i>
                    </button>
                    <h4 class="modal-title text-center" id="registerModalLabel">
                       <i class="iconfont icon-logo logo-modal"></i>
                    </h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label class="control-label">手机号</label>
                            <input class="form-control username-register-input" type="text" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label class="control-label">设定密码</label>
                            <input class="form-control password-register-input" type="password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label class="control-label">确认密码</label>
                            <input class="form-control password-register-input2" type="password" autocomplete="off">
                        </div>
                    </form>
                </div>
                <div class="modal-footer register-footer">
                    <button type="button" class="btn btn-primary register-btn">
                        <h4>免费注册</h4>
                    </button>
                    <div class="privacy-policy text-center">
                        注册即代表我同意<a href="#">隐私政策</a>
                    </div>
                    <div class="register-footer-others text-center">
                        已经有了一个账户吗? <button class="switch-to-login"><span>立即登录</span></button></div>
                    </div>
                </div>
            </div>
